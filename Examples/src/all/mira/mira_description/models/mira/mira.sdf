<?xml version="1.0" ?>
<sdf version="1.5">
  <model name="mira">

    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <inertia>
          <ixx>0.002025</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.002025</iyy>
          <iyz>0</iyz>
          <izz>0.0016</izz>
        </inertia>
        <mass>0.5</mass>
      </inertial>
      <collision name="collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.08</radius>
            <length>0.012</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>10</mu>
              <mu2>10</mu2>
              <fdir1>0 0 0</fdir1>
              <slip1>0</slip1>
              <slip2>0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://mira/meshes/mira_body.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <link name="waist_link">
      <pose>0 0 0 0 0 0</pose>
      <visual name="visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </visual>
    </link>


    <joint name="base_waist_link" type="revolute">
      <parent>base_link</parent>
      <child>roll_M1_link</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
        <!-- Use a very large number to indicate a continuous revolution -->
        <lower>-0.23</lower>
        <upper>0.23</upper>
        </limit>
        <use_parent_model_frame>true</use_parent_model_frame>
      </axis>
    </joint>


  </model>
</sdf>
